{% extends 'base_user.html.twig' %}


{% block title %}Détails Séance{% endblock %}



{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center mb-5"> Détails de la Seance </p>
            <div class=" d-flex justify-content-center text-center align-center">
                {{ render_chart(chart) }}
            </div>
            <div class=" d-flex justify-content-center text-center align-center">
                {{ render_chart(chartApport) }}
            </div>
            <div class=" d-flex justify-content-center text-center align-center">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Question</th>
                            <th scope="col">Remarque </th>
                            <th scope="col">Moyenne</th>    
                        </tr>
                    </thead>
                    <tbody>
                        {% for i in 0..10 %} 
                            <tr>
                                <th>{{dataQuestion[i]}}</th>
                                <th>{{dataRemarque[i]}}</th>
                                {% if i <= 6 %}
                                    <th>{{dataMoyenne[i]}}</th>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  


{% endblock %}
