{% extends 'base_user.html.twig' %}


{% block title %}Détails Séance{% endblock %}



{% block body %}
    <div class="container-fluid">
        <div class="corps mx-auto">
            <p class="display-6 no-wrap text-center mb-5"> Détails de la Seance </p>
            <div class=" d-flex justify-content-center text-center align-center">
                <div class="card align-center" style="width: 18rem;">
                    <div class=" card-body ">
                        <h5 class="card-title">{{seance.getName()}}</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Code : {{seance.getCode()}}</li>
                        <li class="list-group-item">Date et Heure : {% if seance.getDateTime() is null %} - {% else %} {{seance.getDatetime().format("Y-m-d H:i")}} {% endif %}</li>
                        <li class="list-group-item">Nombre de Place Maximum : {{seance.getNombrePlace()}}</li>   
                        {% for formateurice in seance.getProfil() %}
                            <li class="list-group-item">Formateurice : {{formateurice.getName()}} {{formateurice.getLastName()}}</li>
                        {% endfor %}
                    </ul>  
                </div>

                <div class="card" style="width: 18rem;">{# début information formation #}
                    <div class=" card-body ">
                        <h5 class="card-title">{{seance.formation.getName()}}</h5>
                        <p class="card-text">{{seance.formation.getDescription()}}</p>
                        <p class="card-text">OPG :{{seance.formation.getOpg()}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Code : {{seance.formation.getCode()}}</li>
                        <li class="list-group-item">Pré-requis : {{seance.formation.getPreRequis()}}</li>
                        <li class="list-group-item">Durée : {%if seance.formation.getDuration() is null %}0 {% else %} {{seance.formation.getDuration().format("H:i")}} {% endif %} </li>
                        <li class="list-group-item">Public Cible : {{seance.formation.getPublicCible()}}</li>                         
                    </ul>
                    <div class="card-body">
                        <a href="/catalogue/edit/{{ seance.formation.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                    </div>
                </div>  {# fin information formation #}

                <div class="card" style="width: 18rem;">{# début information lieux #}
                    {% for lieu in seance.getLieux() %}
                    <div class=" card-body ">
                        <h5 class="card-title">{{lieu.getName()}}</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Code : {{lieu.getCode()}}</li>
                        <li class="list-group-item">Salle : {{lieu.getSalle()}}</li>
                        <li class="list-group-item">Adresse : {{lieu.getAdresse()}}</li>
                        <li class="list-group-item">Code Postale : {{lieu.getCodePostale()}}</li>
                        <li class="list-group-item">ville : {{lieu.getVille()}}</li>                          
                    </ul>
                    <div class="card-body">
                        <a href="/lieux/edit/{{ lieu.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                    </div>
                    {% endfor %}
                </div>{# fin information lieux #}

                <div> {# début liste inscrit #}
                    <table class="table table-striped  ">
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Profil</th>
                            </tr>
                        </thead>
                        <tbody>
                            {%if seance.getSeanceProfil() is null %} 
                                    Aucun.e  inscrit.e pour le moment sur cette formation
                            {% else %} 
                                {% for profil in seance.getSeanceProfil() %}
                                    <tr>
                                        <th>{{profil.getName()}}</th>
                                        <th>{{profil.getLastName()}}</th>
                                        <th><a href="/account/show/{{profil.getId()}}"><i class="fa-solid fa-eye"></i></a></th> 
                                    </tr> 
                                {% endfor %}
                            {% endif %}
                        </tbody>
                        <tfoot class='justify-content-center'>
                            <th><a href="/seance/listeInscrit/{{seance.getID()}}"><i class="fa-solid fa-list"></i></a></th> 
                        </tfoot>
                    </table>
                </div>  {# fin listing inscrit#}
            </div>
            <footer>
                <a href="/seance/edit/{{seance.getId()}}"><i class="fa-solid fa-pen-to-square"></i></a>
            </footer>
        </div>
    </div>


{% endblock %}
