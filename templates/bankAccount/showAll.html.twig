{% extends 'base_user.html.twig' %}

{% block title %}Liste Compte Banque{% endblock %}


{% block body %}
     <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Liste des comptes en banques
                <a href="/bankAccount/new"><i class="fa-solid fa-plus align-right"></i></a>
            </p>
           
              
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Numero compte</th>
                    <th scope="col">Lieux</th>
                    <th scope="col">Compte associé</th>
                    <th scope="col">Détails</th>
                    
                 </tr>
                </thead>

                <tbody>
                {% for bankAccount in bankAccounts %} 
                
                    <tr>
                        <td>{{bankAccount.getAccountNumber()}}</td>
                        <td> {% if bankAccount.getLocation() %} <a href="/location/show/{{bankAccount.getLocation().getId()}}">{{bankAccount.getLocation().getName()}}</a> {% endif %} </td>
                        <td>{% if bankAccount.getLocation() %} <a href="/chartOfAccounts/show/{{bankAccount.getChartOfAccounts().getId()}}"> {{bankAccount.getChartOfAccounts().getName()}} | {{bankAccount.getChartOfAccounts().getCode()}} </a> {% endif %}  </td>
                        <td><a href="/bankAccount/show/{{bankAccount.getId()}}"><i class="fa-solid fa-eye"></i></a></td> 
                     </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
