{% extends 'base_user.html.twig' %}

{% block title %}Liste équipes élu.e.s{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div class="corps mx-auto">
            
            
            <p class="display-6 no-wrap text-center">Liste des équipes d'élu.e.s
            {% if is_granted('ROLE_BF') %}
                 <a href="/equipeElu/new"><i class="fa-solid fa-plus align-right"></i></a>
            {% endif %}
            </p>

            <table class="table table-striped">
                
                
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Etablissement</th>
                    <th scope="col">Détails</th>
                    
                 </tr>
                </thead>

                <tbody>
                {% for equipeElu in equipeElus %} 
                    <tr>
                        <th>{{equipeElu.getName()}}</th>   
                        <th> 
                            {% for categorie in equipeElu.getCategorie() %}
                                {{categorie}}   
                            {% endfor %}
                        </th>
                        <th>{{equipeElu.getEtablissement()}}</th>
                        <th><a href="/equipeElu/show/{{equipeElu.getId()}}"><i class="fa-solid fa-eye"></i></i></a></th> 
                     </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}
