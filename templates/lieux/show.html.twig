{% extends 'base_user.html.twig' %}

{% block title %}Détails Lieu{% endblock %}



{% block body %}
    <div class="container-fluid">
        <div class="corps mx-auto">
            <p class="display-6 no-wrap text-center mb-5">Détails du Lieu {{lieu.getName()}}</p>
                <div class=" d-flex justify-content-center text-center align-center">
                    <div class="card" style="width: 18rem;">
                
                        <div class=" card-body ">
                            <h5 class="card-title">{{lieu.getName()}}</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Salle : {{lieu.getSalle()}}</li>
                            <li class="list-group-item">Adresse : {{lieu.getAdresse()}}</li>
                            <li class="list-group-item">Code Postale : {{lieu.getCodePostale()}}</li>
                            <li class="list-group-item">ville : {{lieu.getVille()}}</li>
                                                 
                            
                        </ul>
                        <div class="card-body">
                         {% if is_granted('ROLE_USER') %}
                            {% if is_granted('ROLE_BF') %}
                                <a href="/lieux/edit/{{ lieu.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                               {% if is_granted('ROLE_ADMIN') %}
                                     <a href="/lieux/delete/{{ lieu.getId()}}" class="card-link"><i class="fa-solid fa-trash-can"></i></a>
                                {% endif %}
                            {% endif %}
                             <a href="/lieux/" class="card-link"><i class="fa-solid fa-list"></i></a>
                        {% endif %}
                        </div>
                    </div>
                </div>
 

   

        </div>
    </div>


{% endblock %}
