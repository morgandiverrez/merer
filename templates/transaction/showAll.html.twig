{% extends 'base_user.html.twig' %}

{% block title %}liste transaction{% endblock %}




{% block body %}
  <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center mb-5">Tables des Transactions
                     <a href="/transaction/new"><i class="fa-solid fa-plus align-left"></i></a>
                </p>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Code</th>
                    <th scope="col">Clotur√©</th>
                    <th scope="col">Commentaire</th>
                    <th scope="col">Show</th>
                    <th scope="col">Edit</th>
                </tr>
                </thead>

                <tbody>
                {% for transaction in transactions %} <tr>
                    <th>{{transaction.id}}</th>
                    <th>{{transaction.code}}</th>
                    {% if transaction.closure == true %}
                        <th>Oui</th>
                    {% else %}
                        <th>Non</th>
                    {% endif %}
                    <th>{{transaction.quote}}</th>
                    <th><a href="/transaction/show/{{ transaction.id }}"><i class = "fa-solid fa-eye"></i></a></th>
                    <th><a href="/transaction/edit/{{ transaction.id }}"><i class = "fa-solid fa-pen-to-square"></i></a></th>

                </tr> {% endfor %}
                </tbody>
            </table>

            <div class="text-center">
                <a href="/transaction/new/"><button class="btn btn-success mt-3 mb-3" type="submit" name="show">{{ button_label|default('Ajouter une transaction ') }}<i class = "fa text-light fa-plus-square me-2"></i></button></a>
            </div>
        </div>
    </div>
{% endblock %}

