{% extends 'base_user.html.twig' %}

{% block title %}Espace Gestion Document{% endblock %}




{% block body %}

  <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center mb-5">Transaction {{ transaction.code }}</p>
            <div class=" d-flex justify-content-center text-center align-center">
                <div class="card" style="width: 18rem;">
                    <div class=" card-body ">
                        <h5 class="card-title">Commentaire {{transaction.getQuote()}}</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            {% for invoice in transaction.getInvoices()  %} 
                                NDF {{invoice.getCode()}} : <a href="/invoice/show/{{ invoice.getId() }}" class="card-link"> {{invoice.getCode()}} </a>
                            {% endfor %}
                            
                            {% for expenseReport in transaction.getExpenseReports()  %} 
                                NDF {{expenseReport.getCode()}} : <a href="/expenseReport/show/{{ expenseReport.getId() }}" class="card-link"> {{expenseReport.getMotif()}} </a>
                            {% endfor %}
                        </li>
                        <li class="list-group-item">BP :  <a href="/bp/show/{{ transaction.getbP().getId() }}" class="card-link"> {{transaction.getbP().getDesignation()}} </a></li>
                        <li class="list-group-item">Projet :  <a href="/event/show/{{ transaction.getEvent().getId() }}" class="card-link"> {{transaction.getEvent().getName()}} </a></li>   
                    </ul>
                    <div class="card-body">
                        <a href="/transaction/edit/{{ transaction.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/transaction/delete/{{ transaction.getId()}}" class="card-link"><i class="fa-solid fa-trash-can"></i></a>
                        <a href="/transaction/" class="card-link"><i class="fa-solid fa-list"></i></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Label</th>
                    <th scope="col">Date</th>
                    <th scope="col">Montant</th>
                    <th scope="col">PCG</th>
                    <th scope="col">Commentaire</th>
                    <th scope="col">Document</th>
                    <th scope="col">Edit</th>
                </tr>
                </thead>

                <tbody>
                {% for transactionLine in transaction.transactionLines %} <tr>
                    <th>{{transactionLine.label}}</th>
                    <th>{{transactionLine.date.format("d/m/y")}}</th>
                    <th>{{transactionLine.amount}}</th>
                    <th>{{transactionLine.chartofaccounts.code}}</th>
                    <th>{{transactionLine.quote}}</th>
                    {% if transactionLine.urlProof !="null" %}
                        <th><a href="/transactionLine/show/{{ transactionLine.id }}" target="_blank"><i class = "fa text-light fa-eye"></i></a></th>
                    {% else %}
                        <th></th>
                    {% endif %}
                    <th><a href="/transactionLine/edit/{{ transaction.id }}/{{ transactionLine.id }}"><i class = "fa text-light fa-pencil"></i></a></th>

                </tr> {% endfor %}
                </tbody>
            </table>
            <div class="text-center">
                <a href="/transactionLine/new/{{ transaction.id }}"><button class="btn btn-success mt-3 mb-3" type="submit" name="show">{{ button_label|default('Ajouter une ligne ') }}<i class = "fa text-light fa-plus-square me-2"></i></button></a>
            </div>
        </div>
    </div>


{% endblock %}

