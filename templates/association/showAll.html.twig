{% extends 'base_user.html.twig' %}

{% block title %}liste des associations{% endblock %}


{% block body %}
   <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Liste des associations
            {% if is_granted('ROLE_BF')%}
                 <a href="/association/new"><i class="fa-solid fa-plus align-right"></i></a>
            {% endif %}
            </p>
             </p>
                <form action="{{ path('association_showAll') }}" method="post">
                    <p class="text-center ">
                        <input type="text" id="name" name="name" placeholder="Nom"/>
                        <input type="text" id="fedefi" name="fedefi" placeholder="fede fi"/>
                        <button class="btn btn-primary" type="submit" >Rechercher</button>
                </form>
             </p>
            
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Sigle</th>
                    <th scope="col">Fédération fillière</th>
                    <th scope="col">Adresse mail</th>
                    <th scope="col">Détails</th>
                    
                 </tr>
                </thead>

                <tbody>
                    {% for association in associations %} 
                        <tr>
                            <th>{{association.getSigle()}}</th>
                            <th>{{association.getFedeFilliere()}}</th>
                            <th>{{association.getAdresseMail()}}</th>
                            <th><a href="/association/show/{{association.getId()}}"><i class="fa-solid fa-eye"></i></i></a></th> 
                        </tr> 
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
