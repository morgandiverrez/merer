{% extends 'base_user.html.twig' %}

{% block title %}Liste Formateurice{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Liste des Formateurices sur la plateforme</p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">mail</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Détails</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %} 
                        <tr>
                            <td>{{user.profil.getName()}}</td>
                            <td>{{user.profil.getLastName()}}</td>
                            <td>{{user.getEmail()}}</td>
                            <td>{{user.profil.getTelephone()}} </td>
                            <td><a href="/account/show/{{user.profil.getId()}}"><i class="fa-solid fa-eye"></i></a></td> 
                        </tr> 
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
