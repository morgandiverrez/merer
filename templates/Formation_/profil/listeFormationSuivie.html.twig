{% extends 'base_user.html.twig' %}

{% block title %}Formations suivies{% endblock %}

{% block body %}
   <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center mb-5">Liste des formations suivies par {{profil.getName()}} {{profil.getLastName()}}</p>
           

            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Date et Heure</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Durée</th>
                    <th scope="col">Détails</th>
                    
                 </tr>
                </thead>

                <tbody>
                {% for inscription in inscriptions %} 
                    <tr>
                        <td>{{inscription.getSeance().getDatetime().format("Y-m-d H:i")}}</td>
                        <td>{{inscription.getSeance().getName()}}</td>
                        <td>{{inscription.getSeance().formation.getDuration().format("H:i")}}</td>  
                        <td><a href="/seance/show/{{inscription.getSeance().getId()}}"><i class="fa-solid fa-eye"></i></i></a></td>
                    </tr> 
               {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}

