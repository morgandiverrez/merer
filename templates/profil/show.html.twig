{% extends 'base.html.twig' %}

{% block title %}Détails profil{% endblock %}



{% block body %}
    <div class="container-fluid">
        <div class="corps mx-auto">
            <p class="display-6 no-wrap text-center mb-5"> Détails du profil de {{profil.getName()}} {{profil.getLastName()}}</p>
                <div class=" d-flex justify-content-center text-center align-center">
                    <div class="card align-center" style="width: 18rem;">
                
                        <div class=" card-body ">
                            <h5 class="card-title">{{profil.getName()}}</h5>
                            <p class="card-text">{{profil.getLastName()}}</p>
                            <p class="card-text">{{profil.getPronom()}}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Code : {{profil.getCode()}}</li>
                            <li class="list-group-item">Date de naissance : {{profil.getDateOfBirth().format("d:m:y")}}</li>
                            <li class="list-group-item">Score : {%if profil.getScore() is null %}0 {% else %} {{profil.getScore()}} {% endif %} </li>
                            <li class="list-group-item">Equipe d'élu : {% for equipeElu in profil.getEquipeElu() %}{{equipeElu.getName()}} {% endfor %}</li>
                            <li class="list-group-item">Association :{% for association in profil.getAssociation() %}{{association.getSigle()}} {% endfor %} </li
                        
                            
                        </ul>
                        <div class="card-body">
                            <a href="/profil/edit/{{ profil.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="/profil/delete/{{ profil.getId()}}" class="card-link"><i class="fa-solid fa-trash-can"></i></a>
                            <a href="/profil/" class="card-link"><i class="fa-solid fa-list"></i></a>
                           
                        </div>
                    </div>
                    <table class="table table-striped align-left">
                        <thead>
                            <tr>
                                tableau des badges obtenus
                            </tr>
                        </thead>
                        <tbody> 
                            {% for badge in profil.getBadge() %} 
                                <tr>
                                    <img class="card-img-top" src="{{badge.getImage}}" alt="image du association : {{badge.getName()}}" >
                                </tr>
                                <tr>
                                    {{badge.getName()}}
                                </tr>
                            {% endfor %}
                        </tbody>   
                        
                        
                        
                     </table>
                
                
                </div>
 

            {# <div class="text-center">
                <a href="/chlidren/childrenToCamp/{{camp.campId}}"><button class="btn btn-success mt-3 mb-3"><i class = "fa text-light fa-plus-square me-2"></i>{{ button_label|default('Nouveau') }}</button></a>
            </div> #}

        </div>
    </div>


{% endblock %}
