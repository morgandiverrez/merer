{% extends 'base_user.html.twig' %}

{% block title %}Liste Fournisseurs{% endblock %}


{% block body %}
     <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Liste des Fournisseurs
                <a href="/supplier/new"><i class="fa-solid fa-plus align-right"></i></a>
            </p>
           
            <form action="{{ path('supplier_showAll') }}" method="post">
                <p  class="text-center" >
                    <input type="text" id="name" name="name" placeholder="Nom"/>
                    <button class="btn btn-primary" type="submit" >Rechercher</button>
                </p>
            </form>
              
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Lieux</th>
                    <th scope="col">Compte associé</th>
                    <th scope="col">Détails</th>
                    
                 </tr>
                </thead>

                <tbody>
                {% for supplier in suppliers %} 
                
                    <tr>
                        <td>{{supplier.getName()}}</td>
                        <td> {% if supplier.getLocation() %} <a href="/location/show/{{supplier.getLocation().getId()}}">{{supplier.getLocation().getName()}}</a>{% endif %}</td>
                        <td>{% if supplier.getChartOfAccounts() %}<a href="/chartOfAccounts/show/{{supplier.getChartOfAccounts().getId()}}"> {{supplier.getChartOfAccounts().getName()}} | {{supplier.getChartOfAccounts().getCode()}} </a> {% endif %}</td>
                        <td><a href="/supplier/show/{{supplier.getId()}}"><i class="fa-solid fa-eye"></i></a></td> 
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
