{% extends 'base_user.html.twig' %}

{% block title %}Nouveau identifiant administratif{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Identifiant Administratif</p>
            <div class="form-control form-control-lg mx-auto corps text-center">
                {{ form_start(form) }}
                <div class="mx-auto mt-5 mb-5">

                    <div class="siret my-5">
                        {{ form_label(form.siret, 'SIRET ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.siret) }}
                        {{ form_widget(form.siret) }}
                        {{ form_help(form.siret) }}
                    </div>

                    <div class="APE my-5">
                        {{ form_label(form.APE, 'APE ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.APE) }}
                        {{ form_widget(form.APE) }}
                        {{ form_help(form.APE) }}
                    </div>

                
                    <button class="btn btn-success mt-3 mb-3">{{ button_label|default('Valider ') }}<i class = "fa text-light fa-save me-2"></i></button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

