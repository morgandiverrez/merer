{% extends 'base_user.html.twig' %}

{% block title %}Liste NDF{% endblock %}




{% block body %}
     <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <div class="corps mx-auto">
                <p class="display-6 no-wrap text-center mb-5">Tables des NDF</p>
                <form action="{{ path('expenseReport_showAll') }}" method="post">
                <p class="text-center" >
                    <input type="text" id="demandeur" name="demandeur" placeholder="Demandeur"/>
                     <select name="comfirmer" id="comfirmer" >
                        <option select value='tous' >tous</option>
                        <option  value='1'>comfirmé</option>
                        <option  value='0'>pas comfirmé</option>
                    </select>
                    <button class="btn btn-primary" type="submit" >Rechercher</button>
                </p>
            </form>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Date</th>
                        <th scope="col">Demandeur</th>
                        <th scope="col">Comfirmer</th>
                        <th scope="col">Détails</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for expenseReport in expenseReports %} 
                        <tr>
                            <td>{{ expenseReport.code }}</td>
                            <td>{{ expenseReport.date.format('d/m/y') }}</td>
                            <td>{{ expenseReport.supplier.name }}</td>
                            <td>
                            {% if expenseReport.comfirm == FALSE %}
                                <a href="/expenseReport/comfirm/{{ expenseReport.iD }}" >
                                    <i class="fa-sharp fa-solid fa-circle-xmark" style="color: red;" ></i>
                                </a>
                            {% else %}
                                <i class="fa-sharp fa-solid fa-circle-check" style="color: green;"></i>
                            {% endif %} 
                        </td>
                            <td><a href="/expenseReport/show/{{ expenseReport.iD }}" ><i class = "fa-solid fa-eye"></i></a></td>
                        </tr> 
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}

