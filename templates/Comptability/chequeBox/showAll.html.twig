{% extends 'base_user.html.twig' %}

{% block title %}Liste box chèque{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Liste des Boites de Chèques
                <a href="/chequeBox/new"><i class="fa-solid fa-plus align-right"></i></a>
            </p>
            <form action="{{ path('chequeBox_showAll') }}" method="post">
                <p class="text-center ">
                    <input type="text" id="name" name="name" placeholder="Nom"/>
                    <button class="btn btn-primary" type="submit" >Rechercher</button>
                </p>
            </form>
       
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Montant totale</th>
                    <th scope="col">Dernier comptage</th>
                    <th scope="col">Compte associé</th>
                    <th scope="col">Détails</th>
                    
                 </tr>
                </thead>

                <tbody>
                {% for box in chequeBox %} 
                
                    <tr>
                        <td>{{box.getName()}}</td>
                        <td>{{totals[box.getName()]}}€</td>
                          <td>  {% if box.getLastCountDate() is  null %} - {% else %} {{box.getLastCountDate().format('d/m/y')}} {% endif %}   </td>
                          <td>{{box.getChartOfAccounts().getCode()}}</td>
                        <td><a href="/chequeBox/show/{{box.getId()}}"><i class="fa-solid fa-eye"></i></a></td> 
                     </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
