{% extends 'base_user.html.twig' %}

{% block title %}Détails contact{% endblock %}



{% block body %}
    <div class="container-fluid">
        <div  style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center align-center mb-5"> Détails du contact {{contact.getLastName()}}</p>
            
            <div class=" d-flex text-center justify-content-evenly">
                <div class="card justify-content-start" style="width: 18rem;">
            
                    <div class=" card-body ">
                        <h5 class="card-title">{{contact.getName()}}</h5>
                        <h4 class="card-text">{{contact.getLastName()}}</h4>
                         <p class="card-text">{{contact.getCivility()}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                    
                        <li class="list-group-item">Adresse mail : {{contact.getMail()}} </li>  
                        <li class="list-group-item">Téléphone : {{contact.getPhone()}} </li>  
                        <li class="list-group-item">Adresse mail : {{contact.getMail()}} </li>                       
                    </ul>
                    <div class="card-body">
                        <a href="/contact/edit/{{ contact.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>       
                        
                        <a href="/contact/" class="card-link"><i class="fa-solid fa-list"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
