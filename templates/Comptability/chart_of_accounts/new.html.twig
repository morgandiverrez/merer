{% extends 'base_user.html.twig' %}

{% block title %}Nouveau compte{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Ajouter une nouveau compte</p>
            <div class="form-control form-control-lg mx-auto corps text-center">
                {{ form_start(form) }}
                <div class="mx-auto mt-5 mb-5">


                    <div class="name my-5">
                        {{ form_label(form.name, 'Nom ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_help(form.name) }}
                    </div>

                    <div class="code my-5">
                        {{ form_label(form.code, 'Code ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.code) }}
                        {{ form_widget(form.code) }}
                        {{ form_help(form.code) }}
                    </div>

                    <div class="movable my-5">
                        {{ form_label(form.movable, 'movable ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.movable) }}
                        {{ form_widget(form.movable) }}
                        {{ form_help(form.movable) }}
                    </div>
                
                    <button class="btn btn-success mt-3 mb-3">{{ button_label|default('Valider ') }}<i class = "fa text-light fa-save me-2"></i></button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

