{% extends 'base_user.html.twig' %}

{% block title %}Liste Compte{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Liste des comptes
                    <a href="/chartOfAccounts/new"><i class="fa-solid fa-plus align-right"></i></a>
            </p>
            <form action="{{ path('chartOfAccounts_showAll') }}" method="post">
                <p class="text-center">                
                    <input type="text" id="name" name="name" placeholder="Nom"/> 
                    <button class="btn btn-primary" type="submit">Rechercher</button>
                </p>
            </form>
            <table class="table table-striped">
                
                
                <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Movable</th>
                    <th scope="col">DÃ©tails</th>
                 </tr>
                </thead>

                <tbody>
                {% for account in accounts %} 
                    <tr>
                        <td>{{account.getCode()}}</td>   
                        <td>{{account.getName()}}</td>
                        <td>{% if account.isMovable() %}<i class="fa-solid fa-circle-check" style="color: green;"></i>{% else %}<i class="fa-solid fa-circle-xmark" style="color: red;"></i> {% endif %}</td>
                        <td><a href="/chartOfAccounts/show/{{account.getId()}}"><i class="fa-solid fa-eye"></i></i></a></td> 
                     </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}
