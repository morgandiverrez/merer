{% extends 'base_user.html.twig' %}

{% block title %}Liste Financement{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center mb-5">Liste des financements 
                    <a href="/financement/new"><i class="fa-solid fa-plus align-left"></i></a>
            </p>
            <form action="{{ path('financement_showAll') }}" method="post">
                <p class="text-center" >
                    <input type="text" id="name" name="name" placeholder="Nom"/>
                    <input type="text" id="financeur" name="financeur" placeholder="Financeur"/>
                    <button class="btn btn-primary" type="submit" >Rechercher</button>
                </p>
            </form>
            <table class="table table-striped">                   
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Financeur</th>
                    <th scope="col">Date Versement</th>
                    <th scope="col">Détails</th>
                </tr>
                </thead>
                <tbody>
                    {% for financement in financements %} 
                        <tr>
                            <td>{{financement.getName()}}</td>
                            <td>{{financement.getFinanceur()}}</td> 
                            <td>{% if financement.getDateVersement() is null %} non versé {% else %} {{financement.getDateVersement().format("d/m/y ")}} {% endif %}</td>
                            <td><a href="/financement/show/{{financement.getId()}}"><i class="fa-solid fa-eye"></i></a></td> 
                        </tr> 
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
