{% extends 'base_user.html.twig' %}

{% block title %}Modifier badge{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Modifier  le badge {{badge.name}}</p>
            <div class="form-control form-control-lg mx-auto corps text-center">
                {{ form_start(form) }}
                <div class="mx-auto mt-5 mb-5">


                    <div class="titre my-5">
                        {{ form_label(form.titre, 'titre ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.titre) }}
                        {{ form_widget(form.titre) }}
                        {{ form_help(form.titre) }}
                    </div>

                    <div class="description my-5">
                        {{ form_label(form.description, 'Description ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_help(form.description) }}
                    </div>

                     <div class="visible my-5">
                        {{ form_label(form.visible, 'Visible ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.visible) }}
                        {{ form_widget(form.visible) }}
                        {{ form_help(form.visible) }}
                    </div>

                       <div class="endDate my-5">
                        {{ form_label(form.endDate, 'date de fin diffusion ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.endDate) }}
                        {{ form_widget(form.endDate) }}
                        {{ form_help(form.endDate) }}
                    </div>

                      <div class="groups my-5">
                        {{ form_label(form.groups, 'Groupe de diffusion ', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_errors(form.groups) }}
                        {{ form_widget(form.groups) }}
                        {{ form_help(form.groups) }}
                    </div>
                    
                    <button class="btn btn-success mt-3 mb-3">{{ button_label|default('Valider ') }}<i class = "fa text-light fa-save me-2"></i></button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

