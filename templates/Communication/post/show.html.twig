{% extends 'base_user.html.twig' %}

{% block title %}Détails Poste {% endblock %}



{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center mb-5">Détails du poste {{post.getTitre()}}</p>
            <div class=" d-flex justify-content-center text-center align-center">
                <div class="card" style="width: 18rem;">
                    <div class=" card-body ">
                         <p class="card-text">{{post.getTitre()}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Description : {{post.getDescription()}}</li>
                         <li class="list-group-item"> Visible :
                        {% if post.visible == FALSE %}
                            <a href="/post/visible/{{ post.iD }}" >
                                <i class="fa-sharp fa-solid fa-circle-xmark" style="color: red;" ></i>
                            </a>
                        {% else %}
                            <a href="/post/unvisible/{{ post.iD }}" >
                                <i class="fa-sharp fa-solid fa-circle-check" style="color: green;"></i>
                            </a>
                        {% endif %}
                        </li>
                        <li class="list-group-item">Fin de diffusion :  {% if post.getEndDate() is not null %} {{post.getEndDate().format('d/m/y h:i')}} {% endif %}</li>
                        <li class="list-group-item">Groupe de diffusion : {% for group in post.getGroups() %} {{group.getName()}} {% endfor %} </li>
                    </ul>
                    <div class="card-body">
                        <a href="/post/edit/{{ post.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/post/delete/{{ post.getId()}}" class="card-link"><i class="fa-solid fa-trash-can"></i></a>
                        <a href="/post/" class="card-link"><i class="fa-solid fa-list"></i></a>
                    </div>
                </div>                   
            </div>
        </div>
    </div>


{% endblock %}
