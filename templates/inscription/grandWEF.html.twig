{% extends 'base_user.html.twig' %}

{% block title %}Inscription séance{% endblock %}

{% block body %}
    <div class="container-fluid">
        <p class="display-6 no-wrap text-center">S'inscrire à {{seance.getName()}} </p>
        
        <div class="form-control form-control-lg mx-auto corps text-center">
            {{ form_start(form) }}
            <div class="mx-auto mt-5 mb-5">

                <div class="attente my-5">
                    {{ form_label(form.attente, ' Attentes vis à vis du WEF ', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_errors(form.attente) }}
                    {{ form_widget(form.attente) }}
                    {{ form_help(form.attente) }}
                </div>

                 <div class="autorisation_photo my-5">
                    {{ form_label(form.autorisation_photo, ' autorisation de photographie  ', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_errors(form.autorisation_photo) }}
                    {{ form_widget(form.autorisation_photo) }}
                    {{ form_help(form.autorisation_photo) }}
                </div>

                <button class="btn btn-success mt-3 mb-3">{{ button_label|default('Valider ') }}<i class = "fa text-light fa-save me-2"></i></button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

