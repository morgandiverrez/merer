{% extends 'base_user.html.twig' %}

{% block title %}Détails réduction{% endblock %}



{% block body %}
    <div class="container-fluid">
        <div  style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center align-center mb-5"> Détails de la réduction {{discount.getName()}}</p>
            
            <div class=" d-flex text-center justify-content-evenly">
                <div class="card justify-content-start" style="width: 18rem;">
            
                    <div class=" card-body ">
                        <h5 class="card-text">{{discount.getCode()}}</h5>
                        <h5 class="card-title">{{discount.getName()}}</h5>
                        <p class="card-text">{{discount.getDescription()}}</p>
                    </div>
                    <div class="card-body">
                        {% if is_granted('ROLE_BF') %}
                            <a href="/discount/edit/{{ discount.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>       
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="/discount/delete/{{ discount.getId()}}" class="card-link"><i class="fa-solid fa-trash-can"></i></a>
                            {% endif %}
                            <a href="/discount/" class="card-link"><i class="fa-solid fa-list"></i></a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
