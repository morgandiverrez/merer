{% extends 'base_user.html.twig' %}

{% block title %}Nouveau badge{% endblock %}

{% block body %}
    <div class="container-fluid">
        <p class="display-6 no-wrap text-center">Ajouter une nouveau badge</p>
        <div class="form-control form-control-lg mx-auto corps text-center">
            {{ form_start(form) }}
            <div class="mx-auto mt-5 mb-5">


                <div class="image my-5">
                    {{ form_label(form.image, 'Image ', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_errors(form.image) }}
                    {{ form_widget(form.image) }}
                    {{ form_help(form.image) }}
                </div>

                <div class="name my-5">
                    {{ form_label(form.name, 'Nom ', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_help(form.name) }}
                </div>

                <div class="categorie my-5">
                    {{ form_label(form.categorie, 'Catégorie ', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_errors(form.categorie) }}
                    {{ form_widget(form.categorie) }}
                    {{ form_help(form.categorie) }}
                </div>

                <div class="description my-5">
                    {{ form_label(form.description, 'Description ', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_help(form.description) }}
                </div>

                 <div class="date_creation my-5">
                    {{ form_label(form.date_creation, 'Date de création', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_errors(form.date_creation) }}
                    {{ form_widget(form.date_creation) }}
                    {{ form_help(form.date_creation) }}
                </div>
               
                <button class="btn btn-success mt-3 mb-3">{{ button_label|default('Valider ') }}<i class = "fa text-light fa-save me-2"></i></button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

