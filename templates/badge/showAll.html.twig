{% extends 'base_user.html.twig' %}

{% block title %}Liste Badge{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">

            <p class="display-6 no-wrap text-center">Liste des Badges
            {% if is_granted('ROLE_BF')%}
                 <a href="/badge/new"><i class="fa-solid fa-plus align-right"></i></a>
            {% endif %}
            </p>
            
            <table class="table table-striped">
                <thead>
                <tr>

                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Détails</th>       
                    
                 </tr>
                </thead>

                <tbody>
                    {% for badge in badges %} 
                        <tr>
                            <th>{{badge.getName()}}</th>
                            <th>{{badge.getDescription()}}</th>
                            <th>{{badge.getCategorie()}}</th>
                            <th><a href="/badge/show/{{badge.getId()}}"><i class="fa-solid fa-eye"></i></i></a></th> 
                        </tr> 
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}
