{% extends 'base.html.twig' %}

{% block title %}Détails badge {% endblock %}



{% block body %}
    <div class="container-fluid">
        <div class="corps mx-auto">
            <p class="display-6 no-wrap text-center mb-5">Détails du badge {{badge.getName()}}</p>
                <div class=" d-flex justify-content-center text-center align-center">
                    <div class="card" style="width: 18rem;">
                
                        <div class=" card-body ">
                            <img class="card-img-top" src="/files/association/logo_{{association.getSigle()}}.{{association.getExtension()}}" alt="image du association : {{association.getName()}}" >
                            <h5 class="card-title">{{badge.getCode()}}</h5>
                            <p class="card-text">{{badge.getName()}}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Catégorie : {{badge.getCategorie()}}</li>
                            <li class="list-group-item">Description : {{badge.getDescription()}}</li>
                            <li class="list-group-item">Date de création : {{badge.getDateCreation().format("d:m:y")}}</li>

                        </ul>
                        <div class="card-body">
                            <a href="/badge/edit/{{ badge.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="/badge/delete/{{ badge.getId()}}" class="card-link"><i class="fa-solid fa-trash-can"></i></a>
                            <a href="/badge/" class="card-link"><i class="fa-solid fa-list"></i></a>
                           
                        </div>
                    </div>                   
                </div>
        </div>
    </div>


{% endblock %}
