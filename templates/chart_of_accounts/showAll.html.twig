{% extends 'base_user.html.twig' %}

{% block title %}Liste Compte{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div style = "margin-left: auto ; margin-right: auto ; max-width : 900px;">
            <p class="display-6 no-wrap text-center">Liste des comptes
                {% if is_granted('ROLE_BF') %}
                    <a href="/chartOfAccounts/new"><i class="fa-solid fa-plus align-right"></i></a>
                {% endif %}
            </p>
            <form action="{{ path('chartOfAccounts_showAll') }}" method="post">
                <p class="text-center">
                  <input type="text" id="code" name="code" placeholder="code"/>
                    <input type="text" id="name" name="name" placeholder="Nom"/> 
                    {# movable<select name="movable" id="movable" >
                        <option  value= 'null' >Movable</option>
                        <option  value=true >True</option>
                        <option  value= false >False</option>
                   </select> #}
            
                    <button class="btn btn-primary" type="submit">Rechercher</button>
                </p>
            </form>
            <table class="table table-striped">
                
                
                <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Movable</th>
                 </tr>
                </thead>

                <tbody>
                {% for account in accounts %} 
                    <tr>
                        <th>{{account.getCode()}}</th>   
                        <th>{{account.getName()}}</th>
                        <th>{% if account.isMovable() %} oui {% else %} non {% endif %}</th>
                        <th><a href="/ChartOfAccounts/show/{{account.getId()}}"><i class="fa-solid fa-eye"></i></i></a></th> 
                     </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}
